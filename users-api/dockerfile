# ---- Build stage ----
FROM maven:3.9-eclipse-temurin-8 AS build
WORKDIR /app

COPY pom.xml .
RUN mvn dependency:go-offline

COPY . .
RUN mvn -DskipTests package

# ---- Runtime stage ----
FROM eclipse-temurin:8-jre
WORKDIR /app

COPY --from=build /app/target/*.jar app.jar

EXPOSE 8083
CMD ["java", "-jar", "app.jar"]
